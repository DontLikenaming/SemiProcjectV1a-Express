{{#section 'css'}}
    <style>
        #updatefrm {width: 570px;}
    </style>
{{/section}}
{{#section 'script'}}
    <script src="/js/update.js"></script>
{{/section}}
<h3>게시판 글 수정하기</h3>
{{#bds}}
<form name="updatefrm" id="updatefrm">
    <div>
        <label for="title">제목</label>
        <input type="text" id="title" name="title" value="{{title}}">
    </div>

    <div>
        <label for="userid">작성자</label>
        <input type="text" id="userid" name="userid" value="{{userid}}" readonly>
    </div>

    <div>
        <label for="contents" class="dragup">본문</label>
        <textarea id="contents" name="contents" rows="7" cols="55" >{{contents}}</textarea>
    </div>

    <div>
        <label></label>
        <button type="button" id="updatebtn" name="updatebtn">수정완료</button> <button type="reset">다시입력</button>
    </div>
</form>
{{/bds}}
